doctype html
html
  head
    meta(charset='utf-8')      
    title Tic Tac Toe
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    #container
      h1 Tic Tac Toe
      #controls
        button#reset Reset
        #chooser
          label P1
          input#p1-choose(type='color', value='#ffa732')
          label P2
          input#p2-choose(type='color', value='#21515d')
          button#start Start Game
        #players
          #p1.player 
            span P1
          #p2.player
            span P2
      table
        tr
          td#topleft
          td
          td#topright
        tr
          td
          td
          td
        tr
          td#bottomleft
          td
          td#bottomright
      p#winordraw
    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
