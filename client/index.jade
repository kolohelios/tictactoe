doctype html
html
  head
    meta(charset='utf-8')      
    title Tic Tac Toe
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    h1 Tic Tac Toe
    #container
      #controls
        button#reset Reset
        #chooser
          label P1
          input#p1-choose(type='color', value='#ff33cc')
          label P2
          input#p2-choose(type='color', value='#33ccff')
          button#start Start Game
        #players
          #p1.player
          #p2.player
        p#winordraw
      table
        tr
          td
          td
          td
        tr
          td
          td
          td
        tr
          td
          td
          td
    script(src='/vendor/jquery/dist/jquery.min.js')
